    <!--这种方式需要MySQL连接属性的支持-->
    <insert id="addEmps">
        <foreach collection="emps" item="emp" separator=";">
            INSERT INTO tbl_employee(last_name, email, gender, d_id)
            VALUES (#{emp.lastName},#{emp.email},#{emp.gender},#{emp.dept.id})
        </foreach>
    </insert>
</mapper>